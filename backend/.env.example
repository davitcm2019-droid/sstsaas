NODE_ENV=development
PORT=5000

# Obrigatórias (a API não inicia sem elas)
JWT_SECRET=
CORS_ORIGIN=http://localhost:3000

# Postgres (opcional): quando configurado, usuários/auth usam o banco e migrations rodam no start
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE
# DATABASE_SSL=false

# Conecta GOV (opcional): consulta oficial de CNPJ (OAuth2 client_credentials)
# CONECTA_GOV_TOKEN_URL=
# CONECTA_GOV_CNPJ_URL=
# CONECTA_GOV_CLIENT_ID=
# CONECTA_GOV_CLIENT_SECRET=
# CONECTA_GOV_SCOPE=
# CONECTA_GOV_TIMEOUT_MS=10000

# Opcionais
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10

# (Opcional) Bootstrap de admin no banco (recomendado em produção)
# INITIAL_ADMIN_EMAIL=
# INITIAL_ADMIN_PASSWORD=
# INITIAL_ADMIN_NAME=
